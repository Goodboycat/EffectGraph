{
  "name": "ember-trails",
  "description": "Trailing ember particles with motion",
  "tags": ["fire", "embers", "trails", "motion"],
  "suggestedQuality": "medium",
  "emitters": [
    {
      "type": "point",
      "rate": 400,
      "maxParticles": 3500,
      "lifetime": [1, 2.5],
      "velocityRange": {
        "min": [-3, -1, -3],
        "max": [3, 2, 3]
      },
      "position": [0, 2, 0]
    }
  ],
  "physics": {
    "gravity": [0, -2, 0],
    "drag": 0.4,
    "curlNoise": true,
    "curlNoiseFrequency": 1.2,
    "curlNoiseAmplitude": 1.5,
    "vorticity": true,
    "vorticityStrength": 2.0
  },
  "renderer": {
    "mode": "auto",
    "shaderTemplate": "explosion",
    "particleSize": 5,
    "sizeAttenuation": true,
    "blendMode": "additive",
    "postProcessing": {
      "bloom": {
        "enabled": true,
        "strength": 1.0
      }
    }
  },
  "duration": 0
}
